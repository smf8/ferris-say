{
  "build": {
    "devPath": "../../src",
    "distDir": "../../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "x-ferris-say",
    "version": "0.0.0"
  },
  "tauri": {
    "cli": {
      "description": "Something cool written in Rust"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": true,
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "process": {
        "all": false,
        "exit": false,
        "relaunch": true,
        "relaunchDangerousAllowSymlinkMacos": false
      },
      "dialog": {
        "all": true
      },
      "window": {
        "show": true,
        "hide": true
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "x-ferris-say",
        "transparent": true,
        "width": 400,
        "hiddenTitle": true,
        "focus": false,
        "visible": true,
        "titleBarStyle": "Transparent",
        "decorations": false,
        "height": 600,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "url": "index.html"
      },
      {
        "label": "init-config",
        "title": "init-config",
        "width": 400,
        "focus": false,
        "visible": true,
        "height": 600,
        "url": "init.html"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "me.x-ferris-say",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}